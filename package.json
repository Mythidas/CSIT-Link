		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3"
	},
	"type": "module",
	"dependencies": {
		"@auth/sveltekit": "^1.2.0",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/ldapjs": "^3.0.6",
		"@types/pg": "^8.11.4",
